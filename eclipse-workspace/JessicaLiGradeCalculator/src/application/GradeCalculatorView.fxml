<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>

<VBox prefHeight="127.0" prefWidth="365.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GradeCalculatorController">
   <children>
      <HBox prefHeight="10.0">
         <children>
            <Label text="Project Grade">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin></Label>
            <TextField fx:id="projectGradeTextField">
            	<HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
            <Label text="\%">
            	<HBox.margin>
                  <Insets bottom="10.0" left="0.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="projectGradeErrorLabel" text="" textFill="RED">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin></Label>	
         </children>
      </HBox>
      <HBox prefHeight="20.0">
         <children>
            <Label text="Required Coding Challenges">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin></Label>
            <ChoiceBox fx:id="requiredCodingChallengesChoiceBox" prefWidth="150.0">
            	<items>
            		<FXCollections fx:factory="observableArrayList">
            			<Integer fx:value="0" />
            			<Integer fx:value="1" />
            			<Integer fx:value="2" />
            			<Integer fx:value="3" />
            			<Integer fx:value="4" />
            			<Integer fx:value="5" />
            			<Integer fx:value="6" />
            			<Integer fx:value="7" />
            			<Integer fx:value="8" />
            			<Integer fx:value="9" />
            			<Integer fx:value="10" />
            			<Integer fx:value="11" />
            			<Integer fx:value="12" />
            			<Integer fx:value="13" />
            			<Integer fx:value="14" />
            			<Integer fx:value="15" />
            		</FXCollections>
            	</items>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </ChoiceBox>
         </children>
      </HBox>
      <HBox prefHeight="40.0">
         <children>
            <Label text="Optional Coding Challenges">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="optionalCodingChallengesChoiceBox" prefWidth="150.0">
            	<items>
            		<FXCollections fx:factory="observableArrayList">
            			<Integer fx:value="0" />
            			<Integer fx:value="1" />
            			<Integer fx:value="2" />
            			<Integer fx:value="3" />
            			<Integer fx:value="4" />
            			<Integer fx:value="5" />
            		</FXCollections>
            	</items>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </ChoiceBox>
         </children>
      </HBox>
      <HBox>
         <children>
            <Label text="Number of required quizzes completed">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin></Label>
            <ChoiceBox fx:id="requiredQuizzesChoiceBox" prefWidth="150.0">
            	<items>
            		<FXCollections fx:factory="observableArrayList">
            			<Integer fx:value="0" />
            			<Integer fx:value="1" />
            			<Integer fx:value="2" />
            			<Integer fx:value="3" />
            			<Integer fx:value="4" />
            			<Integer fx:value="5" />
            			<Integer fx:value="6" />
            			<Integer fx:value="7" />
            			<Integer fx:value="8" />
            			<Integer fx:value="9" />
            			<Integer fx:value="10" />
            			<Integer fx:value="11" />
            			<Integer fx:value="12" />
            			<Integer fx:value="13" />
            			<Integer fx:value="14" />
            			<Integer fx:value="15" />
            		</FXCollections>
            	</items>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </ChoiceBox>
          <Button mnemonicParsing="false" onAction="#getRequiredQuizGrades" text="Enter Quiz Grades"> 
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
      <HBox>
         <children>
            <Label text="Number of optional quizzes completed">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin></Label>
            <ChoiceBox fx:id="optionalQuizzesChoiceBox" prefWidth="150.0">
            	<items>
            		<FXCollections fx:factory="observableArrayList">
            			<Integer fx:value="0" />
            			<Integer fx:value="1" />
            			<Integer fx:value="2" />
            			<Integer fx:value="3" />
            			<Integer fx:value="4" />
            			<Integer fx:value="5" />
            			<Integer fx:value="6" />
            			<Integer fx:value="7" />
            		</FXCollections>
            	</items>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </ChoiceBox>
          <Button mnemonicParsing="false" onAction="#getOptionalQuizGrades" text="Enter Quiz Grades"> 
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
      <VBox prefHeight="100.0" prefWidth="100.0">
         <children>
            <HBox prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Average grade for required quizzes" />
                  <Label fx:id="requiredQuizAverageGradeLabel" text="0.0">
                   	 <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin> 
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top = "10.0" left="10.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Average grade for optional quizzes" />
                  <Label fx:id="optionalQuizAverageGradeLabel" text="0.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <Button mnemonicParsing="false" onAction="#calculateGrade" text="Calculate Grade"> 
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="courseGradeLabel" text="">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
      </Label>  
   </children>
</VBox>
